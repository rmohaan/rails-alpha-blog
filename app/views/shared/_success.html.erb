<% if !notice.nil? %>
	<div class="alert <%= flash[:success] ? 'alert-success' : 'alert-danger' %>  alert-dismissible fade show mt-3 mb-2" role="alert">
		<p id="notice" class="d-flex my-auto <%= flash[:success] ? 'text-success' : 'text-danger' %> "><%= notice %></p>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
<% end %>