<%= render 'shared/success', notice: flash[:notice], success: flash[:success] %>
<div class="row justify-content-center mt-3">
	<div class="bg-white rounded shadow col-6 mx-2 my-2 p-2 text-center">
		<h3>Category Name: <%= @category.name %></h3>
		<hr/>
		<div class="w-100"></div>
		<div class="row">
			<div class="d-flex col-12 justify-content-center">
				<% if logged_in? && logged_user.admin? %>
					<%= link_to 'Edit', edit_category_path(@category), class: "btn btn-success m-2" %> 
				<% end %>
				<%= link_to 'Back', categories_path, class: "btn btn-primary m-2" %>
			</div>
		</div>
	</div>
	<div class="w-100"></div>
	<div class="row justify-content-center mt-3">
		<h3>Articles in this category</h3>
		<div class="w-100"></div>
		<div class="flickr_pagination">
			<%= will_paginate @articles, :container => false %>
		</div>
		<%= render "articles/cards", articles: @articles %>

		<div class="flickr_pagination">
			<%= will_paginate @articles, :container => false %>
		</div>
	</div>
</div>