<div id="card-container" class="container">
  <div class="row justify-content-md-center">
    <% categories.each do |category| %>
      <div class="col-4">
        <div class="card text-center mt-2 mb-2 shadow mb-5 bg-white rounded">
          <div class="card-header">
            <h5 class="card-title">
              <%= link_to "#{category.name}", category_path(category), class: "h5 text-success" %> </h5>
          </div>
          <div class="card-footer text-success mh-10">
            <small> 
              Created <%= time_ago_in_words(category.created_at) %> ago,
              edited <%= time_ago_in_words(category.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>