<div id="page-content" class="container">
  <%= form_with(model: category, class: "row shadow p-3 mb-5 mt-3 bg-white rounded", local: true) do |form| %>
    <div class="col-12 justify-content-center mt-3">
      <%= render 'shared/errors', obj: category%>
      <div class="col-12">
        <div class="form-group row">
          <%= form.label :name, "Category Name", class: "col-2 col-form-label" %>
          <%= form.text_field :name, class: "form-control col-10 shadow rounded", placeholder: "Enter the category" %>
        </div>

        <div class="row justify-content-center mb-3">
          <%= form.submit "Create", class: "btn btn-success col-1" %>
          <%= link_to 'Back', articles_path, class: "btn btn-primary col-1 ml-2" %>
        </div>
      </div>
    </div>
    
  <% end %>
</div>